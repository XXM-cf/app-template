// 自定义样式
html, body, #app
  width 100%
  font-family PingFang-SC-Medium,Source Han Sans,Segoe UI,Lucida Grande,Helvetica,Arial,Microsoft YaHei,FreeSans,Arimo,Droid Sans,wenquanyi micro hei,Hiragino Sans GB,Hiragino Sans GB W3,sans-serif
  user-select none
  background #f5f5f5

*, :after, :before
  box-sizing border-box
.slide-left-enter,
.slide-right-leave-active
  opacity 0
  -webkit-transform translate3d(100%, 0, 0)
  transform translate3d(100%, 0, 0)

.slide-left-leave-active,
.slide-right-enter
  opacity: 0
  -webkit-transform: translate3d(-100%, 0, 0)
  transform: translate3d(-100%, 0, 0)

.hk-main-button
  background-image linear-gradient(-90deg, #69cff6 3%, #40a0f6 100%)
  box-shadow 0 3px 6px 0 rgba(0,0,0,0.10)
  color #ffffff
  margin 16px
  width auto
  min-height 2.5rem
  &.van-button--large
    border-radius 1.25rem
  &.van-button--disabled
    opacity 0.6

.hk-button-row
  margin 0.8rem
  .hk-main-button
    width 100%
    margin 0

.hk-divider
  &:after
    content ''
    position absolute
    width 100%
    height 1px
    bottom 0
    right 0
    transform-origin 0 0
    transform scaleY(.5)
    background #e5e5e5
  &:last-of-type:after
    display none

.hk-dialog
  border-radius 0.6rem
  .van-dialog__footer
    padding 0 0.8rem 0.8rem
    &:after
      display none
    .van-button
      border-radius 20px
      margin 0 0.6rem
      height 1.8rem
      line-height 1.7rem
      font-size 0.7rem
      color #ffffff
      &:before,
      &:after
        display none
    .van-dialog__cancel
      background #cccccc
    .van-dialog__confirm
      background-image linear-gradient(-90deg, #69cff6 3%, #40a0f6 97%)

.hk-pop-address
  color #666666
  font-size 14px
  padding 14px
  line-height 1.5

.ripple
  position absolute
  background rgba(0,0,0,.15)
  border-radius 100%
  transform scale(0)
  pointer-events none
.ripple.show
  animation ripple .75s ease-out
@keyframes ripple
  from
    transform: scale(0)
    opacity: 1
  to
    transform scale(2)
    opacity 0

// 去掉高德copyright和跳转链接
.amap-logo
  right 0 !important
  left auto !important
  display none !important
        
.amap-copyright
  right 70px !important
  left auto !important
  display none !important
